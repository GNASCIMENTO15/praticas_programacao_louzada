h    = float(input('Digite sua altura (Utilize ponto no lugar da vírgula): '))
sexo = input('Digite o sexo sendo (m para masculino e f para feminino) ')
while True:
    if sexo == 'm' or sexo == 'f':
        break
    else:
        sexo    = input('Digite o sexo novamente sendo (m para masculino e f para feminino) ')
if sexo == 'm':
    peso_ideal = (72.7 * h)-58
    print ('Seu peso ideal é: {:.2f}'.format(peso_ideal))

if sexo == 'f':
    peso_ideal = (62.1 * h)-44.7
    print ('Seu peso ideal é: {:.2f}'.format(peso_ideal))
